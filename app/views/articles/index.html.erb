<section class="m-10 p-5">
  <h1 class="main-title">Articles</h1>

  <% @articles.each do |article| %>
    <div class="my-10 p-10 rounded-lg border-2 border-blue-200 flex flex-col">
      <div>
        <span class="font-bold text-2xl">
          <%= article.name %> <br>
        </span>
        <span class="text-sm">
          <%= article.description %> <br>
        </span>
      </div>
        <div class="w-96 my-10">
        <%= image_tag(article.avatar) if article.avatar.attached? %>
        </div>
      <span class="my-3">
        <%= link_to 'Ver Noticia', article_path(article), class: "btn-primary bg-blue-800" %>
      </span>
    </div>
  <% end %>
</section>
