<div id="<%= dom_id profile %>" class="big-card">
  <span class="font-bold text-3xl">
    <%= current_user.profile.name %>
  </span>

  <span>
    <%= current_user.profile.city %>
    <%= current_user.profile.country %>
  </span>

  <span>
    <strong>Birth:</strong>
    <%= current_user.profile.birth %>
  </span>

  <span>
    <strong>Gender:</strong>
    <%= current_user.profile.gender %>
  </span>

  <span>
    <strong>Role:</strong>
    <%= current_user.profile.role %>
  </span>

    <div>
      <%= link_to "Edit profile", edit_profile_path(current_user.profile), class: "btn-primary bg-green-800" %>
      <%= link_to "Edit account", user_edit_path(current_user), class: "btn-primary bg-blue-800" %>
    </div>

    <div>
      <%= button_to 'Cancel account', user_destroy_path(current_user), class:"btn-primary bg-red-800",
        method: :delete, form: { data: { turbo_confirm: 'Estas Seguro?' } } %>
    </div>

</div>
